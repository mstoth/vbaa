<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Venues" %>

  <label for="large-range" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Large range</label>
  <div id="rangesel"></div>
  <div data-controller="range">
    <input id="large-range" type="range" value="50" class="w-full h-3 bg-gray-200 rounded-lg appearance-none cursor-pointer range-lg dark:bg-gray-700">
  </div>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Venues</h1>
    <%= link_to "New venue", new_venue_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="venues" class="min-w-full">
    <% @venues.each do |venue| %>
      <%= render venue %>
      <p>
        <%= link_to "Show this venue", venue, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
